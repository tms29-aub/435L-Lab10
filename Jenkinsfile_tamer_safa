pipeline {
    agent any
    environment {
        VIRTUAL_ENV = 'venv' 
    }

    stages {
        stage('Setup') {
            steps {
                sh 'echo $PATH'   
                script{
                    if (!fileExists("${env.WORKSPACE}/${VIRTUAL_ENV}")) { 
                    sh "python3 -m venv ${VIRTUAL_ENV}" 
                }   
                }
            }
        }
        stage('Lint') {
            steps {
                sh "echo Done"
            }
        }
    }
}