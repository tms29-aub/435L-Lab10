pipeline {
    agent any
    environment {
        PATH = "/bin:/usr/bin:${env.PATH}"
        VIRTUAL_ENV = 'venv' 
    }

    stages {
        stage('Setup') {
            steps {
                sh 'echo $PATH'   
            }
        }
        stage('Lint') {
            steps {
                sh "source ${VIRTUAL_ENV}/bin/activate && flake8 app.py"
            }
        }
    }
}