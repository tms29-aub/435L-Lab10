pipeline {
    agent any
    environment {
        PATH = "/bin:/usr/bin:${env.PATH}"
        VIRTUAL_ENV = 'venv' 
    }

    stages {
        stage('Setup') {
            steps {
                sh 'echo $PATH'   
                 if (!fileExists("${env.WORKSPACE}/${VIRTUAL_ENV}")) { 
                    sh "python -m venv ${VIRTUAL_ENV}" 
                }
            }
        }
        stage('Lint') {
            steps {
                sh "echo Done"
            }
        }
    }
}